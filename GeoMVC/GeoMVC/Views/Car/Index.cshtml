@model System.Collections.IEnumerable

@functions{
    System.Collections.IEnumerable GetEditModes() { 
        return Enum.GetValues(typeof(GridViewEditingMode)); 
    }
}

<script type="text/javascript">
// <![CDATA[
    $(document).ready(function () {
        $("#editMode").change(function () {
            gvEditing.PerformCallback({ editMode: $("#editMode").val() });
        });
    });
// ]]> 
</script>

<div>
    <div style="padding-bottom:15px;">
        <label for="editMode">Edit Mode:</label>
        @Html.DropDownList("editMode", new SelectList(GetEditModes(), GeoMVC.Controllers.GridViewDemosHelper.EditMode), new { style = "width: 200px;" })
    </div>
</div>

@Html.Partial("EditCarPartial", Model)

