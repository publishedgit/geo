@model GeoWPFCreateDbTest.Nhibernate.Model.Car

@{
    ViewBag.Title = "AddCar";
}

<h2>AddCar</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Car</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Made)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Made)
            @Html.ValidationMessageFor(model => model.Made)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Type)
            @Html.ValidationMessageFor(model => model.Type)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductionTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductionTime)
            @Html.ValidationMessageFor(model => model.ProductionTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Condition)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Condition)
            @Html.ValidationMessageFor(model => model.Condition)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NumberOfOwners)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumberOfOwners)
            @Html.ValidationMessageFor(model => model.NumberOfOwners)
        </div>

      @*  <p>
            <input type="submit" value="Create" />
        </p>
        *@
    </fieldset>
}

<div>
    @Html.ActionLink("Save and back to the List", "UpdateCarToSave", new GeoWPFCreateDbTest.Nhibernate.Model.Car()
{
    Id = Model.Id,
    Location = Model.Location,
    Condition = Model.Condition,
    Made = Model.Made,
    NumberOfOwners = Model.NumberOfOwners,
    ProductionTime = Model.ProductionTime,
    Type = Model.Type,
    Vintage = Model.Vintage
})
</div>

